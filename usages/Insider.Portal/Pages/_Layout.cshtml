<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/bootstrap-override.css" />
	<link rel="stylesheet" href="~/css/jquery-validation-unobtrusive.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
</head>
<body>
	<nav class="navbar navbar-fixed-top navbar-default navbar-light bg-faded pl-0 pr-0">
		<div class="container">
			<a class="navbar-brand" href="/">Insider</a>
			<ul class="nav pull-right">
				<li class="nav-item">
					<a class="nav-link" href="/">首页</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/advisors">找讲师</a>
				</li>

				@if ( _my.IsAnonymous ) {
					<li class="nav-item ml-4 mr-1">
						<a class="btn btn-primary" href="/account/login">登录</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-info" href="/account/register">注册</a>
					</li>
				}
				else {
					<li class="nav-item ml-4 mr-2">
						<a class="nav-link" href="/me">@(string.IsNullOrEmpty(_my.DisplayName) ? "您好" : "您好，" + _my.DisplayName)</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-secondary" href="/account/logout">退出</a>
					</li>
				}
			</ul>
		</div>
	</nav>

	<div class="container mt-4">
		@RenderBody()
	</div>

	<script type="text/javascript" src="~/lib/tether/js/tether.min.js"></script>
	<script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-validation/jquery.validate.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<script type="text/javascript" src="~/lib/weixing/jquery.extend.js"></script>
	<script type="text/javascript" src="~/lib/weixing/jquery.unobtrusive-ajax-request.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
